{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": ["src/**/*.spec.ts", "node_modules"],
  "exec": "ts-node src/server.ts",
  "env": {
    "NODE_ENV": "development",
    "NODEMON": "true"
  },
  "delay": 2500,
  "verbose": true,
  "restartable": "rs",
  "signal": "SIGTERM",
  "killTimeout": 5000,
  "wait": true
}

